.currentArea{
    display: grid;
}
.currentAreaText{
    font-size: 36rpx;
    font-weight: 600;
    margin-top: 30rpx;
    margin-left: 30rpx;
}
.currentAreaBack{
    display: flex;
    width: 100rpx;
    height: 35rpx;
    margin-left: 30rpx;
    margin-top: 30rpx;
    border: 1px rgb(196, 190, 190) solid;
    border-radius: 18rpx;
    background-color:#D7F9E1;
}
.currentAreaBackText{
    font-size: 26rpx;
    margin-left: 12rpx;
    color: #0D8430;
}
.currentAreaLine{
    margin-top: 30rpx;
    width:100%;
    height:2rpx;
    background:#d3d1d1;
}
