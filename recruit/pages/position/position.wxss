/* pages/position/position.wxss */
/* 红色头部 */
.positionContainer{
    width: 100%;
    height: 100%;
}
.positionContainer .headBackground{
    display: grid;
    position: relative;
    z-index: 1;
    width: 100%;
    height: 250rpx;
    /* background-color: #33CC66; */
    background: -webkit-linear-gradient(left,rgb(235, 104, 104),rgb(207, 68, 68),rgb(146, 23, 14));
}
.Con1{
    display: flex;
}
.iconCon1{
    font-size: 16px;
    font-weight: 600;
    margin-top: 30rpx;
    margin-left: 30rpx;
    color: #fff;
}
.Con1Text1{
    font-size: 14px;
    font-weight: 600;
    margin-top: 27rpx;
    margin-left: 3rpx;
    color: #fff;
}
.Con1Text2{
    font-size: 28px;
    font-weight: 600;
    margin-top: 27rpx;
    margin-left: 140rpx;
    font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
    font-style:italic;
    text-shadow: 10px 10px 10px rgb(44, 43, 43);
    color: #fff;
}
.searchSlot{
    color: #fff;
    font-weight: 600;
}
/* 5个图标区域 */
.naviContainer{
    display: flex;
    width: 94%;
    margin-left: 3%;
}
.naviItem{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 20%;
}
.naviItem .iconfont{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    text-align: center;
    line-height: 100rpx;
    background: rgb(207, 68, 68);
    font-size: 50rpx;
    color: #fff;
    margin: 20rpx 0;
}
.naviItem text{
    font-size: 26rpx;
    font-weight: 600;
}
