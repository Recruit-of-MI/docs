/* 消息列表 */
.messageListContainer{
    margin-top: 10rpx;
    width: 100%;
    height: 140rpx;
    display: flex;
}
.messageListContainerAvatar{
    margin-top: 20rpx;
    margin-left: 30rpx;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50% 50% 50% 50%;
}
/* 昵称&最后一条消息&分割线 */
.MLCon1{
    width: 400rpx;
    margin-top: 20rpx;
    margin-left: 20rpx;
    display: grid;
}
.MLCon1Text1{
    font-size: 30rpx;
    font-weight: 600;
}
.MLCon1Text2{
    font-size: 26rpx;
    /* 单行文本溢出 */
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis; 
}

/* 最后发言时间 */
.MLCon2{
    display: flex;
    margin-top: 55rpx;
    margin-left: 80rpx;
}
.MLCon2Text1{
    font-size: 30rpx;
    color: #959494;
}
.Line1{
    width:80%;
    margin-left: 20%;
    height:2rpx;
    background:#d3d1d1;
}