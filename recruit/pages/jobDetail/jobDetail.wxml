<!--pages/jobDetail/jobDetail.wxml-->
<!-- 工作详情包裹器 -->
<view class="jobDetailContainer">
    <!-- 工作介绍 -->
    <view class="jobIntroduction">
        <!-- 工作名称和薪资 -->
        <view class="JICon1">
            <text class="JICon1Text1">{{jobDetailList.recruitPosition}}</text>
            <text class="JICon1Text2">{{jobDetailList.minWages}}-{{jobDetailList.maxWages}}元</text>
        </view>
        <!-- 位置和学历要求 -->
        <view class="JICon2">
            <text class="iconfont icon-dingwei1 JICon2Text1">杭州·{{jobDetailList.region}}</text>
            <text class="iconfont icon-gongwenbao JICon2Text2">{{jobDetailList.minEducation}}·{{jobDetailList.mode}}</text>
        </view>
        <!-- 经理头像&名字&职位 -->
        <view class="JICon3">
            <image class="JICon3Avatar" src="{{jobDetailList.publisherAvatarUrl}}">
            </image>
            <view class="JICon3Con1">
                <view class="JICon3Con1Con1">
                    <text class="JICon3Con1Con1Text1">{{jobDetailList.publisherName}}</text>
                    <text class="JICon3Con1Con1Text2">/人力资源经理</text>
                </view>
                <view class="JICon3Con1Con2">
                    <text class="JICon3Con1Con2Text1">{{jobDetailList.corporateName}}</text>
                </view>
            </view>
            <text class="iconfont icon-shoucang1 JICon3Icon"></text>
        </view>
        <!-- 分割线 -->
        <view class="jobIntroductionLine"></view>
    </view>

    <!-- 职位描述 -->
    <view class="jobDescription">
        <text class="JDText1">职位描述</text>
        <text class="JDText2">
            {{jobDetailList.jobDescription}}
        </text>
        <!-- 分割线 -->
        <view class="jobDescriptionLine"></view>
    </view>
    <!-- 职位福利 -->
    <view class="jobBenefits">
        <text class="JBText1">职位福利</text>
        <view class="JBCon2" >
            <view wx:if="{{jobDetailList.welfare1}}" class="JBCon1">
                <text class="JBCon1Text1">{{jobDetailList.welfare1}}</text>
            </view>
            <view wx:if="{{jobDetailList.welfare2}}" class="JBCon1">
                <text class="JBCon1Text1">{{jobDetailList.welfare2}}</text>
            </view>
            <view wx:if="{{jobDetailList.welfare3}}" class="JBCon1">
                <text class="JBCon1Text1">{{jobDetailList.welfare3}}</text>
            </view>
            <view wx:if="{{jobDetailList.welfare4}}" class="JBCon1">
                <text class="JBCon1Text1">{{jobDetailList.welfare4}}</text>
            </view>
        </view>
        <view wx:if="{{jobDetailList.welfare5}}" class="JBCon2" >
            <view class="JBCon1">
                <text class="JBCon1Text1">{{jobDetailList.welfare5}}</text>
            </view>
        </view>
         <!-- 分割线 -->
         <view class="jobDescriptionLine"></view>
    </view>
    <!-- 申请和聊天 -->
    <view class="application">
        <view class="applicationCon1">
            <text class="applicationCon1Text1">申请</text>
        </view>
        <view class="applicationCon2" bindtap="tojobChat">
            <text class="applicationCon2Text1">聊天</text>
        </view>
    </view>
</view>
