/* pages/mine/mine.wxss */
.headContainer{
    width: 100%;
    height: 100%;
}
.headContainer .headBackground{
    position: relative;
    z-index: 1;
    width: 100%;
    height: 240rpx;
    background-color: #33CC66;
}
.headContainer .Container{
    position: absolute ;
    z-index: 2;
    width: 80%;
    height: 350rpx;
    margin-left: 10%;
    margin-top: 100rpx;
    border: 1px rgb(196, 190, 190) solid;
    border-radius: 20rpx;
    background-color:#FFF;
}
.headContainer .Container .avatar{
    margin: 30rpx;
    width: 80rpx;
    height: 80rpx;
    /* border:2rpx solid rgb(196, 190, 190); */
    border-radius: 50% 50% 0% 50%;
}
.userInfoBox{
    display: flex;
}
.headContainer .Container .username{
    margin-left: 20rpx;
    font-size: 14px;
    font-weight: 600;
    font-family:sans-serif;
}
