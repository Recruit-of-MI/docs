    font-weight: 600;
}
.tabsPickCon1Line1{
    width:88rpx;
    height:6rpx;
    background:#33CC66;
}

/* 消息未点击 */
.tabsPickCon1s{
    margin-top: 35rpx;
    margin-left: 30rpx;
    margin-bottom: 50rpx;
